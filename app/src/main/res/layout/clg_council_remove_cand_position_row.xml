<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/row_layout"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.VotifyProject.Light">

    <androidx.cardview.widget.CardView
        android:id="@+id/row_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/position_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="marquee"
                android:layout_alignParentStart="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="Karthik Iyer"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/created_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/position_name"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/position_name"
                android:text="created on 12/2/20"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/remove"
                style="@style/Button.shape.bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:text="Remove"
                android:layout_alignParentEnd="true"
                app:icon="@drawable/ic_baseline_person_remove_alt_1_24"
                app:strokeColor="@color/purple_700" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>